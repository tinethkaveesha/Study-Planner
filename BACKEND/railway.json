{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "unless-stopped",
    "restartPolicyMaxRetries": -1,
    "startCommand": "npm start",
    "healthchecks": {
      "liveness": {
        "initialDelaySeconds": 10,
        "periodSeconds": 30,
        "timeoutSeconds": 5,
        "failureThreshold": 3,
        "exec": {
          "command": ["node", "-e", "require('http').get('http://localhost:5000/health', (r) => {if (r.statusCode !== 200) process.exit(1)})"]
        }
      }
    }
  }
}
